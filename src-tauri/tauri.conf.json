{
    "build": {
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist"
    },
    "package": {
        "productName": "file-explorer",
        "version": "0.0.0"
    },
    "tauri": {
        "cli": {
            "args": [
                {
                    "name": "path",
                    "short": "p",
                    "takesValue": true,
                    "description": "Start path",
                    "multiple": false
                },
                {
                    "name": "focused",
                    "short": "f",
                    "takesValue": true,
                    "description": "Filename of focused element. Must be relative",
                    "multiple": false
                }
            ]
        },
        "allowlist": {
            "all": true,
            "protocol": {
                "all": true,
                "asset": true,
                "assetScope": ["**"]
            }
        },
        "bundle": {
            "active": true,
            "category": "DeveloperTool",
            "copyright": "",
            "deb": {
                "depends": []
            },
            "externalBin": [],
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "identifier": "file-explorer",
            "longDescription": "",
            "macOS": {
                "entitlements": null,
                "exceptionDomain": "",
                "frameworks": [],
                "providerShortName": null,
                "signingIdentity": null
            },
            "resources": [],
            "shortDescription": "",
            "targets": "all",
            "windows": {
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "timestampUrl": ""
            }
        },
        "security": {
            "csp": null
        },
        "updater": {
            "active": false
        },
        "windows": [
            {
                "decorations": false,
                "fullscreen": false,
                "height": 600,
                "label": "main",
                "resizable": true,
                "title": "file-explorer",
                "width": 800,
                "fileDropEnabled": true
            }
        ]
    }
}