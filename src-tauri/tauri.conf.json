{
    "productName": "file-explorer",
    "version": "0.1.1",
    "identifier": "com.evgeny-berg.file-explorer",
    "build": {
        "beforeDevCommand": "pnpm dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "pnpm build",
        "frontendDist": "../dist"
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    },
    "app": {
        "windows": [
            {
                "decorations": false,
                "fullscreen": false,
                "height": 600,
                "label": "main",
                "resizable": true,
                "title": "file-explorer",
                "width": 800
            }
        ],
        "security": {
            "csp": null
        }
    }
}