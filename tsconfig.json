{
    "compilerOptions": {
        "target": "ES6",
        "allowJs": true,
        "module": "ESNext",
        "lib": ["ESNext", "DOM"],
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "strict": true,
        "baseUrl": ".",
        "outDir": "dist",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "jsx": "react-jsx",
        "plugins": [{ "name": "typescript-plugin-css-modules" }],
        "paths": {
            "@src": ["src"],
            "@utils": ["src/utils"],
            "@tauriAPI": ["src/tauriAPIWrapper"],
            "@hooks": ["src/hooks"],
            "@assets": ["src/assets"],
            "@zustand": ["src/zustand"],
            "@i18n": ["src/i18n"],
            "@components/*": ["src/components/*"],
            "@test-utils": ["src/tests/test-utils.tsx"]
        }
    },
    "include": ["src"],
    "references": [{ "path": "./tsconfig.node.json" }]
}
