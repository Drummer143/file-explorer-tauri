{
    "compilerOptions": {
        "target": "ES6",
        "allowJs": true,
        "module": "ESNext",
        "lib": ["ESNext", "DOM"],
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "strict": true,
        "baseUrl": ".",
        "outDir": "dist",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "jsx": "react-jsx",
        "plugins": [{ "name": "typescript-plugin-css-modules" }]
    },
    "include": ["src"],
    "references": [{ "path": "./tsconfig.node.json" }]
}
